(lang dune 2.8)
(package
 (name opam-dune-expand)
 (synopsis "Plugin to view ppx-expanded OCaml source files.")
 (description "opam-dune-expand is an Opam plugin that allows users to view the expanded output of PPXs on their source files.")
 (depends
  (sexplib (>= ~))
  (ppx_sexp_conv (>= ~))
  (ppx_deriving (>= ~))
  (core (>= ~))
  (cmdliner (>= ~))
  (ocaml (>= 4.08.0))))
(generate_opam_files true)
(license GPL-3.0+)
(source (uri git+https://gitlab.com/gopiandcode/dune-expand.git))
(bug_reports https://gitlab.com/gopiandcode/dune-expand/issues)
(homepage https://gitlab.com/gopiandcode/dune-expand)
(name opam-dune-expand)
(authors "Kiran Gopinathan")
(maintainers "kirang@comp.nus.edu.sg")
